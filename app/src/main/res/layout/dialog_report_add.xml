<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCitizenLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="18sp"
            android:text="Korisnik: "/>
        <TextView
            android:id="@+id/dialogCitizenSelectedName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tvCitizenLabel"
            android:text=""/>

        <ImageButton
            android:id="@+id/dialogCitizenSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dialogCitizenSelectedName"
            android:src="@android:drawable/ic_menu_search"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Količina Vode u Kubicima:"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dialogReportTvKM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="M3"
                android:layout_weight="10"
                android:textStyle="bold"
                android:textColor="#0000FF"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"/>
            <EditText
                android:id="@+id/dialogReportNewAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:digits="0123456789"
                android:layout_alignParentLeft="true"
                android:gravity="right"
                android:layout_toLeftOf="@id/dialogReportTvKM" />

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>